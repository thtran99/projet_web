{% extends 'base.html.twig' %}

{% block title %}Tous les Cours{% endblock %}

{% block body %}
    <section class="cours">
    
        {% for cour in cours %}
        <article>
            <h3> 
                <a href="{{path('profile_show_cours', {'id' : cour.id})}}"> 
                {{cour.title }}
                {% if cour in app.user.lessons %}
                    {% if is_granted('ROLE_EDITOR')%}
                        [CREE]
                    {% else %}
                        [INSCRIT]
                    {% endif %}
                {% endif %}
                </a> 
                </h3>
            <div class="metadata"> Ecrit le {{cour.createdAt | date('d/m/Y')}} Ã  {{cour.createdAt | date('H:i')}} par {{cour.createdBy}}</div>
            <hr>
        {% endfor %}
        </article>

    </section>    

    
{% endblock %}
