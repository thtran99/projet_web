{% extends 'base.html.twig'%}

{% form_theme form 'bootstrap_4_layout.html.twig' %}


{% block title %}
	{% if editMode %}
		Modification de
		{{exercise.title}}
	{% else %}
		Création d'un exercice
	{% endif %}
{% endblock %}

{% block body%}

	{% if editMode %}
		<h1>Modification de
			{{exercise.title}}</h1>
	{% else %}
		<h1>Création d'un exercice</h1>
	{% endif %}

	{{ form_start(form)}}

	{{ form_row(form.title, {'label':'Titre', 'attr' : {'placeholder' : 'Titre de l\'exercice'}}) }}

{{ form_row(form.description, {'label':'Description', 'attr' : { 'placeholder' : 'Description de l\'exercice'}}) }}

	{{ form_row(form.nbLines, {'label':'Nombre de lignes', 'attr' : { 'placeholder' : 'Nombre entre 1 et 100'}}) }}


	<nav class="navbar navbar-expand-lg ">
		<div class="collapse navbar-collapse" id="navbarColor04">
			<ul class="navbar-nav ml-auto">
				<li class="nav-item">
					<button type="submit" class="btn btn-success">
						Suivant
					</button>
				</li>
			</ul>
		</div>
	</nav>

	{{ form_end(form) }}


{% endblock %}
