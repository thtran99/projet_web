{% extends "base.html.twig" %}

{% block title %}Creation exercice
{% endblock %}

{% block body %}
	<h1>Creation du contenue de l'exercice</h1>


	<table id="lines" class="table table-striped">
		<thead>
			<tr>
				<th>Rang</th>
				<th>Identation</th>
				<th>Contenu</th>
			</tr>
		</thead>

		{{ form_start(form)}}


		{% for line in form.lines %}

			<tbody>
				<tr>
					<td>
						{{ loop.index0 }}
					</td>
					<td>
						{{ form_widget(line.indentation) }}
					</td>

					<td>
						{{ form_widget(line.content, {'attr' : { 'placeholder' : 'Ecrivez une ligne de code'}}
						) }}
					</td>
				</tr>
			</tbody>
		{% endfor %}

	</table>


	<nav class="navbar navbar-expand-lg ">
		<div class="collapse navbar-collapse" id="navbarColor04">
			<ul class="navbar-nav ml-auto">
				<li class="nav-item">

					<button type="submit" class="btn btn-success">
						Cr√©er l'exercice
					</button>

				</li>
			</ul>
		</div>
	</nav>
	{{ form_end(form) }}

{% endblock %}
